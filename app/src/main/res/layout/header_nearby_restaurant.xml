<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingStart="@dimen/recycler_nearby_rests_vertical_padding"
    android:paddingEnd="@dimen/recycler_nearby_rests_vertical_padding"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/headerFirstTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/overview"
        android:textColor="@color/headerNearbyTitleColor"
        android:textSize="@dimen/header_nearby_title_text_size"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/headerSecondTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_nearby_subtitle_top_margin"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="@dimen/footer_nearby_desc_line_spacing"
        android:text="@string/near_by_you"
        android:textColor="@color/footerNearbyDescColor"
        android:textSize="@dimen/header_nearby_subtitle_text_size"
        android:textStyle="normal" />

</LinearLayout>